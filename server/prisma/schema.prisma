// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id                    String      @id @default(uuid())
  departureLocation     String      @map("departure_location")
  destinationLocation   String      @map("destination_location")
  departureDate         DateTime    @map("departure_date")
  destinationDate       DateTime    @map("destination_date")
  travellersAmount      Int         @default(1) @map("travellers_amount")
  transportation        String
  price                 Int
  status                String
  contactEmail          String      @map("contact_email")
  contact               Contact     @relation(fields: [contactEmail], references: [email])
  createdAt             DateTime    @default(now()) @map("created_at")
  updatedAt             DateTime    @updatedAt @map("updated_at")

  @@map("quotes")
}

model Contact {
  id            String    @id                 @default(uuid())
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  phone         String    @unique
  email         String    @unique
  quotes        Quote[]
  createdAt     DateTime  @default(now())     @map("created_at")
  updatedAt     DateTime  @updatedAt          @map("updated_at")

  @@map("contacts")
}
